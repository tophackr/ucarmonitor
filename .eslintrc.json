{
    "extends": [
        "@feature-sliced/eslint-config/rules/layers-slices",
        "next/core-web-vitals",
        "next/typescript",
        "prettier"
    ],
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "settings": {
        "import/resolver": {
            "typescript": {
                "alwaysTryTypes": true
            }
        }
    },
    "rules": {
        "import/order": "warn"
    }
}